@model IEnumerable<Licenta.Models.Furnizor>

@{
    ViewData["Title"] = "Furnizori";
}
<br />
<div class="row">
    <div class="col-7">
        <h2 class="text-primary">Furnizori</h2>
    </div>
    <div class="col-5 text-right">
        <a asp-action="Create" class="btn btn-outline-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Creare furnizor</a>
    </div>
</div>
<br />

<div class="table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr class="table-light">
                <th>
                    @Html.DisplayNameFor(model => model.Denumire)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Denumire)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FurnizorID"><i class="fa fa-pencil-square text-success" aria-hidden="true"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.FurnizorID"><i class="fa fa-info-circle" aria-hidden="true"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.FurnizorID"><i class="fa fa-trash text-danger" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>