@model Licenta.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Creare</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Denumire" class="control-label font-weight-bold"></label>
                <input asp-for="Denumire" class="form-control" />
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrRegComertului" class="control-label font-weight-bold"></label>
                <input asp-for="NrRegComertului" class="form-control" />
                <span asp-validation-for="NrRegComertului" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodCAEN" class="control-label font-weight-bold"></label>
                <input asp-for="CodCAEN" class="form-control" />
                <span asp-validation-for="CodCAEN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipFirma" class="control-label font-weight-bold"></label>
                @* Radio Button for Tip firma *@
                <p>
                    Persoana Fizica
                    @Html.RadioButtonFor(model => model.TipFirma, "Persoana Fizica")
                </p>

                <p>
                    Persoana Juridica
                    @Html.RadioButtonFor(model => model.TipFirma, "Persoana juridica")
                </p>
                <span asp-validation-for="TipFirma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapitalSocial" class="control-label font-weight-bold"></label>
                <input asp-for="CapitalSocial" class="form-control" />
                <span asp-validation-for="CapitalSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CasaDeMarcat" class="control-label font-weight-bold"></label>
                @* Radio Button for Casa de marcat *@
                <p>
                    Da
                    @Html.RadioButtonFor(model => model.CasaDeMarcat, "Da")
                </p>

                <p>
                    Nu
                    @Html.RadioButtonFor(model => model.CasaDeMarcat, "Nu")
                </p>
                <span asp-validation-for="CasaDeMarcat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TVA" class="control-label font-weight-bold"></label>
                @* Radio Button for TVA *@
                <p>
                    Lunar
                    @Html.RadioButtonFor(model => model.TVA, "Lunar")
                </p>

                <p>
                    Trimestrial
                    @Html.RadioButtonFor(model => model.TVA, "Trimestrial")
                </p>

                <p>
                    Neplatitor
                    @Html.RadioButtonFor(model => model.TVA, "Neplatitor")
                </p>

                <p>
                    TVA colectata la incasare
                    @Html.RadioButtonFor(model => model.TVA, "TVA colectata la incasare")
                </p>
                <span asp-validation-for="TVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inapoi la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
