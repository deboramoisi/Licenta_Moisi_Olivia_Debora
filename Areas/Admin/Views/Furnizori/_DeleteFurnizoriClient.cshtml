@model Licenta.Areas.Admin.Models.ViewModels.DeleteFurnizoriVM


<div class="modal fade" id="delete-furnizori" tabindex="-1" role="dialog" aria-labelledby="delFurnizoriLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="delFurnizoriLabel">Stergere toti furnizorii unui client</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-contrller="Furnizori" asp-action="DeleteFurnizori" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
                
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ClientId" class="control-label"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="ClientId" id="clientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>
