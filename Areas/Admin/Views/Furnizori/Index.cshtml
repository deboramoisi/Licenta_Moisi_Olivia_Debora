@model IEnumerable<Licenta.Models.Furnizori>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="modal-furnizori-import-ph"></div>

<br />

<div>
    <a asp-controller="Furnizori" asp-action="XMLParsingFurnizori">Test </a>
</div>

<div class="row">
    <div class="col-6">
        <h2>Furnizori</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Adaugare furnizor nou</a>
    </div>
</div>

<div class="row">
    <div class="col-12 text-right">
        <button type="button" data-target="#add-furnizori-import" data-url="@Url.Action("ImportFurnizori")" data-toggle="ajax-furnizori-modal" class="btn btn-outline-primary">
            <i class="fa fa-plus" aria-hidden="true"></i>
            &nbsp;&nbsp;Import furnizori Saga</button>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12 text-right">
        <button type="button" data-target="#delete-furnizori" data-url="@Url.Action("DeleteFurnizori")" data-toggle="ajax-del-furn-modal" class="btn btn-outline-danger">
            <i class="fa fa-trash" aria-hidden="true"></i>
            &nbsp;&nbsp;Stergere furnizori
        </button>
    </div>
</div>

<br />

<div class="table-responsive-md p-4 border rounded">
    <table class="table table-hover" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.denumire)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cod_fiscal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tara)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.Denumire)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/import/importFurnizori.js"></script>
} 