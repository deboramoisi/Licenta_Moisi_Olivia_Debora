@model IEnumerable<Licenta.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}
<br />
<div class="row">
    <div class="col-7">
        <h2 class="text-primary">Users</h2>
    </div>
    <div class="col-5 text-right">
        <a href="/Identity/Account/Register" class="btn btn-outline-primary">
            <i class="fas fa-user-plus"></i>
            &nbsp;&nbsp;Creare user nou
        </a>
    </div>
</div>
<br />

<div class="table-responsive-md p-4 border rounded">
    <table class="table table-hover" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PozitieFirma)
                </th>
                <th>
                    Firma apartinatoare
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}
