@model IEnumerable<Licenta.Models.ClientFurnizor>

@{
    ViewData["Title"] = "Clienti -> furnizori";
}
<br/>
<div class="row">
    <div class="col-6">
        <h2>Clientii si furnizorii acestora</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-outline-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Adauga furnizor unui client</a>
    </div>
</div>
<br/>

<div class="table-responsive-md p-4 border rounded">
    <table class="table table-hover" id="tblData" style="width:100%">
        <thead>
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Furnizor)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/clientFurnizors.js"></script>
}