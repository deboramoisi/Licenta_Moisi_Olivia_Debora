@model Licenta.Models.ClientFurnizor

@{
    ViewData["Title"] = "Delete";
}

<br />

<h3>Sunteti sigur ca doriti sa stergeti acest furnizor asignat clientului?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Denumire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Furnizor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Furnizor.Denumire)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClientFurnizorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Inapoi</a>
    </form>
</div>
