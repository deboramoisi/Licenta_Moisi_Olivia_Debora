@model Licenta.Models.TipDocument

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Editare tip document</h2>

<hr />
<div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipDocumentId" />
            
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Denumire" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Denumire" class="form-control" />
                    <span asp-validation-for="Denumire" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Salvare" class="btn btn-primary" />
                </div>
                <div class="col-3">
                    <a asp-action="Index">Inapoi la lista</a>
                </div>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
