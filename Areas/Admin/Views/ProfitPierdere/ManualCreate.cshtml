@model Licenta.Models.ProfitPierdere

@{
    ViewData["Title"] = "Adaugare solduri pr/pierdere";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>@ViewData["Title"]</h2>

<hr />
<div class="container mt-5">
    <form asp-controller="ProfitPierdere" asp-action="ManualCreate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ClientId" class="control-label"></label>
            </div>
            <div class="col-4">
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="cred_prec" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="cred_prec" class="form-control" />
                <span asp-validation-for="cred_prec" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="deb_prec" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="deb_prec" class="form-control" />
                <span asp-validation-for="deb_prec" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="rulaj_d" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="rulaj_d" class="form-control" />
                <span asp-validation-for="rulaj_d" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="rulaj_c" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="rulaj_c" class="form-control" />
                <span asp-validation-for="rulaj_c" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="fin_d" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="fin_d" class="form-control" />
                <span asp-validation-for="fin_d" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="fin_c" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="fin_c" class="form-control" />
                <span asp-validation-for="fin_c" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Profit_luna" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Profit_luna" class="form-control" />
                <span asp-validation-for="Profit_luna" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Pierdere_luna" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Pierdere_luna" class="form-control" />
                <span asp-validation-for="Pierdere_luna" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Year" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Month" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Month" class="form-control" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2 offset-4">
                <input type="submit" value="Adauga" class="btn btn-success form-control" />
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-primary form-control">Inapoi</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
