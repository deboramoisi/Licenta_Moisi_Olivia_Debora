@model Licenta.ViewModels.DocumentVM

<div class="modal fade" id="add-salariati-import" tabindex="-1" role="dialog" aria-labelledby="addSalariatiImportLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="addSalariatiImportLabel">Import Saga Salariati</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-contrller="Salariats" asp-action="ImportSalariati" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="DocumentPathUrl" class="control-label"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="DocumentPathUrl" id="fileUpload" class="form-control" />
                            <span asp-validation-for="DocumentPathUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            Client apartinator
                        </div>
                        <div class="col-4">
                            <select asp-for="ClientId" id="clientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>