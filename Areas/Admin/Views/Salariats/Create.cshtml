@model Licenta.Models.Salariat

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Creare salariat</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nume" class="control-label"></label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenume" class="control-label"></label>
                <input asp-for="Prenume" class="form-control" />
                <span asp-validation-for="Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pozitie" class="control-label"></label>
                <input asp-for="Pozitie" class="form-control" />
                <span asp-validation-for="Pozitie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAngajare" class="control-label"></label>
                <input asp-for="DataAngajare" class="form-control date_year" />
                <span asp-validation-for="DataAngajare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataConcediere" class="control-label"></label>
                <input asp-for="DataConcediere" class="form-control date_year" />
                <span asp-validation-for="DataConcediere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Inapoi la Lista</a>
</div>

@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="~/js/salariat.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
