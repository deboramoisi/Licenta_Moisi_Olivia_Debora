@model Licenta.ViewModels.ClientVM

@{
    ViewData["Title"] = "Edit client";
}

<br />
<h2>Editare client</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.ClientId" />
            <div class="form-group">
                <label asp-for="Client.Denumire" class="control-label"></label>
                <input asp-for="Client.Denumire" class="form-control" />
                <span asp-validation-for="Client.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.NrRegComertului" class="control-label"></label>
                <input asp-for="Client.NrRegComertului" class="form-control" />
                <span asp-validation-for="Client.NrRegComertului" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.CodCAEN" class="control-label"></label>
                <input asp-for="Client.CodCAEN" class="form-control" />
                <span asp-validation-for="Client.CodCAEN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.TipFirma" class="control-label"></label>
                @* Radio Button for Tip firma *@
                <p>
                    Persoana Fizica
                    @Html.RadioButtonFor(model => model.Client.TipFirma, "Persoana Fizica")
                </p>

                <p>
                    Persoana Juridica
                    @Html.RadioButtonFor(model => model.Client.TipFirma, "Persoana juridica")
                </p>
                <span asp-validation-for="Client.TipFirma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.CapitalSocial" class="control-label font-weight-bold"></label>
                <input asp-for="Client.CapitalSocial" class="form-control" />
                <span asp-validation-for="Client.CapitalSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.CasaDeMarcat" class="control-label font-weight-bold"></label>
                @* Radio Button for Casa de marcat *@
                <p>
                    Da
                    @Html.RadioButtonFor(model => model.Client.CasaDeMarcat, "Da")
                </p>

                <p>
                    Nu
                    @Html.RadioButtonFor(model => model.Client.CasaDeMarcat, "Nu")
                </p>
                <span asp-validation-for="Client.CasaDeMarcat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.TVA" class="control-label font-weight-bold"></label>
                @* Radio Button for TVA *@
                <p>
                    Lunar
                    @Html.RadioButtonFor(model => model.Client.TVA, "Lunar")
                </p>

                <p>
                    Trimestrial
                    @Html.RadioButtonFor(model => model.Client.TVA, "Trimestrial")
                </p>

                <p>
                    Neplatitor
                    @Html.RadioButtonFor(model => model.Client.TVA, "Neplatitor")
                </p>

                <p>
                    TVA colectata la incasare
                    @Html.RadioButtonFor(model => model.Client.TVA, "TVA colectata la incasare")
                </p>
                <span asp-validation-for="Client.TVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedFurnizors" class="control-label font-weight-bold"></label>
                <select asp-for="SelectedFurnizors" class="form-control" asp-items="ViewBag.FurnizorId" multiple></select>
                <span asp-validation-for="SelectedFurnizors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/client.js"></script>
}
