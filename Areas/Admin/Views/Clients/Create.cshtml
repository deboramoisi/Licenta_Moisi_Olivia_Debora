@model Licenta.ViewModels.ClientVM

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Creare client</h2>

<hr />
<div class="container mt-5">
 
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.Denumire" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="Client.Denumire" class="form-control" />
                <span asp-validation-for="Client.Denumire" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.NrRegComertului" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="Client.NrRegComertului" class="form-control" />
                <span asp-validation-for="Client.NrRegComertului" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.CodCAEN" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="Client.CodCAEN" class="form-control" />
                <span asp-validation-for="Client.CodCAEN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.TipFirma" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                @* Radio Button for Tip firma *@
                Persoana Fizica
                @Html.RadioButtonFor(model => model.Client.TipFirma, "Persoana Fizica")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                Persoana Juridica
                @Html.RadioButtonFor(model => model.Client.TipFirma, "Persoana juridica")
                <span asp-validation-for="Client.TipFirma" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.CapitalSocial" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="Client.CapitalSocial" class="form-control" />
                <span asp-validation-for="Client.CapitalSocial" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.CasaDeMarcat" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                @* Radio Button for Casa de marcat *@
                Da
                @Html.RadioButtonFor(model => model.Client.CasaDeMarcat, "Da")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                Nu
                @Html.RadioButtonFor(model => model.Client.CasaDeMarcat, "Nu")
                <span asp-validation-for="Client.CasaDeMarcat" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Client.TVA" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                @* Radio Button for TVA *@
                Lunar @Html.RadioButtonFor(model => model.Client.TVA, "Lunar")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                Trimestrial @Html.RadioButtonFor(model => model.Client.TVA, "Trimestrial")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                Neplatitor @Html.RadioButtonFor(model => model.Client.TVA, "Neplatitor")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                TVA colectata la incasare @Html.RadioButtonFor(model => model.Client.TVA, "TVA colectata la incasare")
                <span asp-validation-for="Client.TVA" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-primary form-control" asp-action="Index">Inapoi</a>
            </div>
        </div>
    </form>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
