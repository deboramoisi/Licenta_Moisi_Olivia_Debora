@model Licenta.Models.Client

@{
    ViewData["Title"] = "Adaugare client";
}

<br />
<h2>Creare client</h2>

<hr />
<div class="container mt-5">
 
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Denumire" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="Denumire" class="form-control" />
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CodFiscal" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="CodFiscal" class="form-control" />
                <span asp-validation-for="CodFiscal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NrRegComertului" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-6">
                <input asp-for="NrRegComertului" class="form-control" />
                <span asp-validation-for="NrRegComertului" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Adauga" class="btn btn-success form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-primary form-control" asp-action="Index">Inapoi</a>
            </div>
        </div>
    </form>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
