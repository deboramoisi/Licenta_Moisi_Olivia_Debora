@model Licenta.Models.Client

@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Detalii clienti</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Denumire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Denumire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NrRegComertului)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NrRegComertului)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodCAEN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodCAEN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipFirma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipFirma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapitalSocial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapitalSocial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CasaDeMarcat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CasaDeMarcat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TVA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TVA)
        </dd>

        @* Includem detalii despre sediul social *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SediuSocial.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SediuSocial.Telefon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SediuSocial.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SediuSocial.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientFurnizori)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-sm table-bordered col-sm-6">
                <thead class="thead-dark">
                    <tr>
                        <th class="p-2">Denumire</th>
                        <th class="p-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var furnizor in Model.ClientFurnizori)
                        {
                            if (furnizor.Furnizor != null)
                            {
                                <tr>
                                    <td class="p-2">@furnizor.Furnizor.Denumire </td>
                                    <td class="p-2"></td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salariati)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-sm table-bordered col-sm-6">
                <thead class="thead-dark">
                    <tr>
                        <th class="p-2">Nume Prenume</th>
                        <th class="p-2">Pozitie</th>
                        <th class="p-2">Salariu</th>
                    </tr>
                </thead>
                <tbody>
            @{
                foreach (var salariat in Model.Salariati)
                {
                    <tr>
                        <td class="p-2">@salariat.NumePrenume </td>
                        <td class="p-2">@salariat.Pozitie </td>
                        <td class="p-2"></td>
                    </tr>
                }
            }
                </tbody>
            </table>
        </dd>


    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ClientId">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
