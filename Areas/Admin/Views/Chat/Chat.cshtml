@model Licenta.ViewModels.ChatVM
@using System.Security.Claims;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chat";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
    var userName = User.Identity.Name;
    var senderMessage = "message user-sender";
    var receiverMessage = "message user-receiver";
    var messageClass = "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/chat.css" />
}

<div class="wrapper row">
    <div class="side-menu col-3">
        <a id="utilizatoriArea" data-toggle="collapse" href="#utilizatori" role="button" aria-expanded="false" aria-controls="utilizatori">
            Utilizatori &nbsp; <i class='fas fa-angle-double-down'></i>

        </a>
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="utilizatori">
                    @foreach (var chat in Model.AllChats)
                    {
                        <div class="user-chat">
                            <a asp-controller="Chat" asp-action="Chat" asp-route-id="@chat.ChatId">
                                @chat.Users.FirstOrDefault(x => x.ApplicationUserId != userId).ApplicationUser.Nume
                                <i class="fas fa-angle-double-right col-1"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <div id="chatBody" class="col-9">
        <div class="chat-body">
            <div>
                <h3 class="p-2 mt-4 mb-3">
                    <i class="far fa-user"></i> &nbsp;&nbsp;
                    @Model.Chat.Users.Where(x => x.ApplicationUserId != User.FindFirst(ClaimTypes.NameIdentifier).Value).FirstOrDefault().ApplicationUser.UserName.Split("@")[0]
                </h3>
            </div>

            @foreach (var message in Model.Chat.Mesaje)
            {
                if (message.Nume == userName)
                {
                    messageClass = senderMessage;
                }
                else
                {
                    messageClass = receiverMessage;
                }
                <div class="@messageClass">
                    <header>@message.Nume.Split("@")[0]: &nbsp;</header>
                    <p>@message.Text</p>
                    <footer>@message.Data</footer>
                </div>
            }

        </div>

        <form asp-controller="Chat" asp-action="CreateMessage" onsubmit="sendMessage()" class="chat-input">
            <input type="hidden" value="@Model.Chat.ChatId" name="roomId" />
            <input type="hidden" value="@Model.Chat.Nume" name="roomName" />
            <div class="form-group row m-2">
                <input type="text" name="message" id="message-input" class="col-10 form-control" />
                <button type="submit" class="col-1 form-control p-2 ml-2 btn btn-secondary"><i class="far fa-paper-plane"></i></button>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script type="text/javascript">
        var roomId = "@Model.Chat.ChatId";
        var loggedUser = "@User.Identity.Name";
    </script>
    <script src="~/js/chat/myChat.js"></script>
} 