@model IEnumerable<Licenta.Models.Plati.Plata>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Suma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataScadenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipPlata)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Suma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataScadenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipPlata.Denumire)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlataId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlataId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlataId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
