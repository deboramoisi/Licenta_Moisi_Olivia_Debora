@model Licenta.Models.Plati.Plata

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Adauga plata</h2>

<hr />

<div class="container mt-5">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ClientId" class="control-label"></label>
            </div>
            <div class="col-4">
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TipPlataId" class="control-label"></label>
            </div>
            <div class="col-4">
                <select asp-for="TipPlataId" class="form-control" asp-items="ViewBag.TipPlataId"></select>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Suma"></label>
            </div>
            <div class="col-4">
                <input asp-for="Suma" class="form-control" />
                <span asp-validation-for="Suma" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Data"></label>
            </div>
            <div class="col-4">
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="DataScadenta"></label>
            </div>
            <div class="col-4">
                <input asp-for="DataScadenta" class="form-control" />
                <span asp-validation-for="DataScadenta" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2 offset-4">
                <input type="submit" value="Salveaza" class="btn btn-success form-control" />
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-primary form-control">Inapoi</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @*<script src="~/js/tipDocument.js"></script>*@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
