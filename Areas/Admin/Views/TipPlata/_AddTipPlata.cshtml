@model Licenta.Models.Plati.TipPlata

<div class="modal fade" id="add-tipPlata" tabindex="-1" role="dialog" aria-labelledby="addTipPlataLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="addTipPlataLabel">Adaugare tip plata nou</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-area="Admin" asp-controller="TipPlata" asp-action="Create" id="formTip">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Denumire" class="control-label"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="Denumire" class="form-control" />
                            <span asp-validation-for="Denumire" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal-tp">Save</button>
            </div>
        </div>
    </div>
</div>