@model Licenta.Models.SolduriCasa

@{
    ViewData["Title"] = "Add Sold";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h3>Adaugare sold</h3>
<hr />
<br />

<div class="container">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ClientId" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="sold_prec" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="sold_prec" class="form-control" />
                <span asp-validation-for="sold_prec" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="incasari" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="incasari" class="form-control" />
                <span asp-validation-for="incasari" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="plati" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="plati" class="form-control" />
                <span asp-validation-for="plati" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="sold_zi" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="sold_zi" class="form-control" />
                <span asp-validation-for="sold_zi" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="data" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Adauga" class="btn btn-outline-success form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="form-control btn btn-outline-info">Inapoi</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
