@model IEnumerable<Licenta.Models.SolduriCasa>

@{
    ViewData["Title"] = "Solduri casa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Import solduri casa - show modal *@
<div id="modal-solduri-import-ph"></div>

<br/>

<h3>Solduri casa</h3>
<hr />
<br />

<div class="form-group row">
    <div class="col-sm-4 offset-sm-2 col-md-2">
        <a asp-controller="SolduriCasa" asp-action="Create" class="form-control btn btn-outline-primary">
            <i class="fas fa-plus-square"></i>&nbsp;&nbsp; Add sold nou
        </a>
    </div>
    <div class="col-sm-5 col-md-3">
        <button type="button" data-target="#add-solduri-import" data-url="@Url.Action("ImportSolduri")" data-toggle="ajax-solduri-modal" class="btn btn-outline-secondary form-control">
            <i class="fas fa-file-import"></i>
            &nbsp;&nbsp;Import solduri Saga
        </button>
    </div>
    <div class="col-sm-4 col-md-2">
        <button type="button" data-target="#delete-solduri" data-url="@Url.Action("DeleteSolduri")" data-toggle="ajax-del-sold-modal" class="btn btn-outline-danger form-control">
            <i class="fas fa-trash"></i>
            &nbsp;&nbsp;Stergere solduri
        </button>
    </div>
</div>

<br />

<partial name="_NotificationBoxPartial" />

<div class="table-responsive-md p-4 border rounded">
    <table class="table table-hover" id="tblData" style="width:100%">
        <thead>
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sold_prec)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.incasari)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.plati)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sold_zi)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
    </div>

@section Scripts {
    <script src="~/js/import/importSolduriCasa.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
