@model Licenta.Models.TipDocument

<div class="modal fade" role="dialog" id="tipDocumentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        
        <div class="modal-content">
            <form id="tipDocumentForm" asp-controller="TipDocuments" asp-action="Create" method="post" autocomplete="off" >
                
                <div class="modal-header">
                    <h4 class="modal-title">Adaugare/Editare Tip Document</h4>
                </div>
                
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Denumire" class="control-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Denumire" class="form-control" />
                            <span asp-validation-for="Denumire" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer form-group">
                    <div class="col-4 offset-4">
                        <input type="submit" onclick="onSubmit()" value="Create" class="btn btn-success form-control" />
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn btn-primary form-control" onclick="onCloseModal()">Close</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
