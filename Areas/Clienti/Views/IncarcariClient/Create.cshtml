@model Licenta.ViewModels.DocumentVM

@{
    ViewData["Title"] = "Transmitere document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<h2>Transmitere document nou</h2>

<hr />
<br/>
<div class="container">
    
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="DocumentPathUrl" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="DocumentPathUrl" class="form-control" />
                    <span asp-validation-for="DocumentPathUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ClientId" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input value=@ViewBag.ClientId class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ApplicationUserId" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input value=@ViewBag.UserId class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="TipDocumentId" class="control-label"></label>
                </div>
                <div class="col-6">
                    <select asp-for="TipDocumentId" class="form-control" asp-items="ViewBag.TipDocumentId"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Transmite" class="btn btn-outline-success form-control" />
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-outline-info form-control">Inapoi</a>
                </div>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
