@model Licenta.Models.QandA.QuestionCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Editare categorie intrebari</h2>

<hr />
<div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionCategoryId" />
            
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Denumire" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Denumire" class="form-control" />
                    <span asp-validation-for="Denumire" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Actualizeaza" class="btn btn-outline-success" />
                </div>
                <div class="col=3">
                    <a class="btn btn-outline-primary" asp-action="Index">Inapoi</a>
                </div>
            </div>
        </form>
</div>


