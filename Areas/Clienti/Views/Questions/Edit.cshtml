@model Licenta.Models.QandA.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <label asp-for="Intrebare" class="control-label"></label>
                <input asp-for="Intrebare" class="form-control" />
                <span asp-validation-for="Intrebare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAdaugare" class="control-label"></label>
                <input asp-for="DataAdaugare" class="form-control" />
                <span asp-validation-for="DataAdaugare" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rezolvata" /> @Html.DisplayNameFor(model => model.Rezolvata)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="QuestionCategoryId" class="control-label"></label>
                <select asp-for="QuestionCategoryId" class="form-control" asp-items="ViewBag.QuestionCategoryId"></select>
                <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

