@model Licenta.Models.QandA.Question

@{
    ViewData["Title"] = "Edit Intrebare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Editare intrebare</h2>

<hr />

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="QuestionId" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Intrebare" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Intrebare" class="form-control" />
                <span asp-validation-for="Intrebare" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Descriere" class="control-label"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Descriere" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Descriere" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="QuestionCategoryId" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="QuestionCategoryId" class="form-control" asp-items="ViewBag.QuestionCategoryId"></select>
                <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row form-check">
            <div class="offset-3 col-3">
                <label class="form-check-label">
                    &nbsp; <input class="form-check-input" asp-for="Rezolvata" /> @Html.DisplayNameFor(model => model.Rezolvata)
                </label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DataAdaugare" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="DataAdaugare" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ApplicationUserId" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId" disabled></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Actualizare" class="btn btn-success form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-primary form-control" asp-action="Index">Inapoi</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
