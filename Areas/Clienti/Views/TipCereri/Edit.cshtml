@model Licenta.Models.CereriDocumente.TipCerere

@{
    ViewData["Title"] = "Editare tip cerere";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Editeaza tip cerere</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipCerereId" />
            <div class="form-group">
                <label asp-for="Denumire" class="control-label"></label>
                <input asp-for="Denumire" class="form-control" />
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizeaza" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Inapoi</a>
</div>

