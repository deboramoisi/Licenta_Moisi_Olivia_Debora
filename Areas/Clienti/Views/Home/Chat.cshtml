@model IEnumerable<Licenta.Models.Chat.Message>

@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = User.Identity.Name;
}

<div class="jumbotron bg-light">
    <h2 class="text-center mb-5" style="color: #892EE4;">
        <i class="fab fa-facebook-messenger"></i>&nbsp; Chat Public
    </h2>

    <div class="row">
        <div class="col-md-12" id="chat">
            @if (Model != null)
            {
                @foreach (var message in Model)
                {
                    string containerClass, timePosition, textAlign, bgColor, offset = "";
                    if (userName == message.UserName)
                    {
                        containerClass = "container darker";
                        timePosition = "time-right text-light";
                        textAlign = "text-right text-white";
                        bgColor = "#CACAFF";
                        offset = "col-md-4 offset-md-8";
                    }
                    else
                    {
                        containerClass = "container";
                        timePosition = "time-left";
                        textAlign = "text-left";
                        bgColor = "#E1CAF9";
                        offset = "col-md-4";
                    }

                    <div class="row">
                        <div class="@offset">
                            <div class="@containerClass p-2 m-2 rounded" style="background-color: @bgColor;">

                                <p class="sender @textAlign">@message.UserName</p>
                                <p class="@textAlign">@message.Text</p>
                                <span class="@timePosition">@message.When.ToString()</span>

                            </div>
                        </div>
                    </div>

                }
            }
        </div>

        <div class="col-md-12">
            <form asp-controller="Home" asp-action="Create"
                  data-ajax-begin="clearInputField"
                  data-ajax-complete=""
                  data-ajax-failure="toastr.error('Introduceti un mesaj valid!')"
                  data-ajax-success="sendMessage"
                  data-ajax="true"
                  data-ajax-method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-4">
                    <input name="Text" class="form-control" id="messageText" />
                </div>

                <div class="form-group">
                    <button type="submit" id="submitButton" class="btn text-white col-3" style="background-color: #8C8CFF">
                        <i class="far fa-paper-plane"></i> &nbsp;&nbsp; Send
                    </button>
                </div>

                <input type="hidden" value="@userName" name="username" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @if (User.Identity.IsAuthenticated)
    {
        <script>
            const userName = "@ViewBag.CurrentUserName";
        </script>
    }
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-unobtrusive-ajax.min.js"></script>
    <script src="~/js/chat/chat.js"></script>
    <script src="~/js/chat/signalrHandler.js"></script>
} 